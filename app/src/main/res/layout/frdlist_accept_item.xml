<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/frdlist_accept_nick"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:textSize="15dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="20dp"/>

    <TextView
        android:id="@+id/frdlist_accept_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:textSize="15dp"
        android:layout_toEndOf="@+id/frdlist_accept_nick"
        android:layout_marginLeft="10dp"/>

    <Button
        android:id="@+id/frdlist_accept_btn1"
        android:layout_width="55dp"
        android:layout_height="30dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:layout_toLeftOf="@+id/frdlist_accept_btn2"
        android:background="@drawable/frdlist_accept_btn"
        android:text="수락"
        android:textColor="#458078"
        android:textSize="15dp"
        android:textStyle="bold"/>

    <Button
        android:id="@+id/frdlist_accept_btn2"
        android:layout_width="55dp"
        android:layout_height="30dp"
        android:layout_alignParentRight="true"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/frdlist_accept_btn"
        android:text="거절"
        android:textColor="#458078"
        android:textSize="15dp"
        android:textStyle="bold"/>
</RelativeLayout>