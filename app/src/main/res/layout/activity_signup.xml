<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/colorWhite"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".Login.SignupActivity">
    <androidx.appcompat.widget.Toolbar
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/lock_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorWhite">
        <TextView
            android:layout_width="wrap_content"
            android:text="회원가입"
            android:textSize="20sp"
            android:layout_gravity="center"
            android:textColor="@color/colorBlack"
            android:layout_height="wrap_content" />
    </androidx.appcompat.widget.Toolbar>
    <TextView
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:text="회원가입 정보 입력"
        android:textSize="25sp"
        android:textColor="@color/colorBlack"
        android:textStyle="bold"
        android:layout_marginLeft="25dp"
        android:layout_height="wrap_content" />
    <EditText
        android:layout_marginTop="15dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:hint="     이름"
        android:background="@drawable/grey_square_edittext"
        android:layout_width="match_parent"
        android:layout_height="50dp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_height="wrap_content">
        <EditText
            android:id="@+id/emailEdit"
            android:hint="     이메일 주소"
            android:background="@drawable/grey_square_edittext"
            android:layout_width="0dp"
            android:layout_weight="4"
            android:layout_height="50dp" />
        <Button
            android:background="@drawable/black_square"
            android:layout_weight="1"
            android:id="@+id/emailCheckBtn"
            android:layout_width="0dp"
            android:text="중복확인"
            android:layout_gravity="center_vertical"
            android:layout_height="50dp" />
    </LinearLayout>

    <TextView
        android:id="@+id/alreadyExistTv"
        android:layout_marginTop="2dp"
        android:layout_width="match_parent"
        android:layout_marginLeft="22dp"
        android:textColor="@color/colorRed"
        android:text="이미 존재하는 이메일입니다."
        android:visibility="gone"
        android:layout_height="wrap_content" />
    <EditText
        android:layout_marginTop="5dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:inputType="numberPassword"
        android:hint="     비밀번호"
        android:background="@drawable/grey_square_edittext"
        android:layout_width="match_parent"
        android:layout_height="50dp" />
    <EditText
        android:layout_marginTop="5dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:hint="     비밀번호 확인"
        android:inputType="numberPassword"
        android:background="@drawable/grey_square_edittext"
        android:layout_width="match_parent"
        android:layout_height="50dp" />
    <EditText
        android:layout_marginTop="5dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:hint="     닉네임"
        android:background="@drawable/grey_square_edittext"
        android:layout_width="match_parent"
        android:layout_height="50dp" />
    <Button
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:paddingLeft="150dp"
        android:paddingRight="150dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:textSize="23sp"
        android:text="다음"
        android:drawableEnd="@drawable/keyboard_arrow_right"
        android:background="@drawable/black_square"
        android:layout_height="60dp" >

    </Button>
</LinearLayout>