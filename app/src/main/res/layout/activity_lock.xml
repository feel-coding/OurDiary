<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".main.LockActivity">
    <LinearLayout
        android:layout_weight="1.5"
        android:layout_width="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_height="0dp">
        <TextView
            android:layout_width="wrap_content"
            android:text="비밀번호"
            android:textColor="#000000"
            android:textSize="30sp"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:text="비밀번호를 입력해주세요."
            android:textColor="#aaaaaa"
            android:textSize="15sp"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <Button
                android:layout_width="40dp"
                android:layout_margin="5dp"
                android:id="@+id/lock_first"
                android:layout_height="40dp"
                android:background="@drawable/radio_button_unchecked" />
            <Button
                android:layout_width="40dp"
                android:id="@+id/lock_second"
                android:layout_margin="5dp"
                android:layout_height="40dp"
                android:background="@drawable/radio_button_unchecked" />
            <Button
                android:layout_width="40dp"
                android:layout_margin="5dp"
                android:id="@+id/lock_third"
                android:layout_height="40dp"
                android:background="@drawable/radio_button_unchecked" />
            <Button
                android:layout_width="40dp"
                android:id="@+id/lock_fourth"
                android:layout_margin="5dp"
                android:layout_height="40dp"
                android:background="@drawable/radio_button_unchecked" />

        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="0dp">
        <LinearLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp">
            <Button
                android:layout_weight="1"
                android:layout_width="0dp"
                android:text="1"
                android:textSize="30sp"
                android:id="@+id/lock_one"
                android:onClick="input"
                android:textColor="@color/white"
                android:background="@color/colorPrimary"
                android:layout_height="match_parent" />
            <Button
                android:layout_weight="1"
                android:text="2"
                android:id="@+id/lock_two"
                android:textSize="30sp"
                android:onClick="input"
                android:textColor="@color/white"
                android:background="@color/colorPrimary"
                android:layout_width="0dp"
                android:layout_height="match_parent" />
            <Button
                android:layout_weight="1"
                android:text="3"
                android:onClick="input"
                android:textSize="30sp"
                android:id="@+id/lock_three"
                android:textColor="@color/white"
                android:background="@color/colorPrimary"
                android:layout_width="0dp"
                android:layout_height="match_parent" />
        </LinearLayout>
        <LinearLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp">
            <Button
                android:layout_weight="1"
                android:layout_width="0dp"
                android:text="4"
                android:id="@+id/lock_four"
                android:textSize="30sp"
                android:onClick="input"
                android:textColor="@color/white"
                android:background="@color/colorPrimary"
                android:layout_height="match_parent" />
            <Button
                android:layout_weight="1"
                android:text="5"
                android:textSize="30sp"
                android:textColor="@color/white"
                android:onClick="input"
                android:id="@+id/lock_five"
                android:background="@color/colorPrimary"
                android:layout_width="0dp"
                android:layout_height="match_parent" />
            <Button
                android:layout_weight="1"
                android:text="6"
                android:onClick="input"
                android:textSize="30sp"
                android:id="@+id/lock_six"
                android:textColor="@color/white"
                android:background="@color/colorPrimary"
                android:layout_width="0dp"
                android:layout_height="match_parent" />
        </LinearLayout>
        <LinearLayout
            android:layout_weight="1"
            android:text=""
            android:textSize="30sp"
            android:textColor="@color/white"
            android:layout_width="match_parent"
            android:layout_height="0dp">
            <Button
                android:layout_weight="1"
                android:text="7"
                android:textSize="30sp"
                android:textColor="@color/white"
                android:onClick="input"
                android:id="@+id/lock_seven"
                android:layout_width="0dp"
                android:background="@color/colorPrimary"
                android:layout_height="match_parent" />
            <Button
                android:layout_weight="1"
                android:text="8"
                android:textSize="30sp"
                android:id="@+id/lock_eight"
                android:onClick="input"
                android:textColor="@color/white"
                android:background="@color/colorPrimary"
                android:layout_width="0dp"
                android:layout_height="match_parent" />
            <Button
                android:layout_weight="1"
                android:text="9"
                android:textSize="30sp"
                android:textColor="@color/white"
                android:onClick="input"
                android:id="@+id/lock_nine"
                android:layout_width="0dp"
                android:background="@color/colorPrimary"
                android:layout_height="match_parent" />
        </LinearLayout>
        <LinearLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp">
            <Button
                android:layout_weight="1"
                android:background="@color/colorPrimary"
                android:layout_width="0dp"
                android:clickable="false"
                android:layout_height="match_parent" />
            <Button
                android:layout_weight="1"
                android:text="0"
                android:textSize="30sp"
                android:textColor="@color/white"
                android:id="@+id/lock_zero"
                android:onClick="input"
                android:layout_width="0dp"
                android:background="@color/colorPrimary"
                android:layout_height="match_parent" />
            <LinearLayout
                android:layout_weight="1"
                android:background="@color/colorPrimary"
                android:layout_width="0dp"
                android:gravity="center"
                android:layout_height="match_parent">
                <Button
                    android:background="@drawable/backspace_white"
                    android:layout_width="20dp"
                    android:id="@+id/lock_backspace"
                    android:onClick="input"
                    android:layout_height="20dp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>