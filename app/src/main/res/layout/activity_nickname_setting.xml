<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@color/colorWhite"
    android:gravity="center"
    android:layout_height="match_parent"
    tools:context=".Login.NicknameSettingActivity">

    <TextView
        android:layout_width="wrap_content"
        android:text="원하시는 닉네임을 입력하세요"
        android:textColor="@color/colorBlack"
        android:textSize="20sp"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <EditText
            android:background="@drawable/edittext_selector"
            android:layout_width="200dp"
            android:layout_height="50dp" />
        <Button
            android:text="중복확인"
            android:layout_gravity="center_vertical"
            android:background="@drawable/black_square"
            android:layout_width="70dp"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <TextView
        android:id="@+id/nicknameAlreadyExist"
        android:layout_width="wrap_content"
        android:layout_marginTop="5dp"
        android:paddingStart="20dp"
        android:visibility="gone"
        android:text="@string/nicknameAlreadyExist"
        android:layout_height="wrap_content" />
    <Button
        android:id="@+id/nicknameSettingFinishBtn"
        android:layout_marginTop="10dp"
        android:background="@color/colorPrimary"
        android:text="완료"
        android:textColor="@color/colorWhite"
        android:layout_width="200dp"
        android:layout_height="50dp" />

</LinearLayout>